# to see all database available in database server 
show databases:

# to create database
create database <db-name>;

# to delete database
drop database <db-name>;

# to use database
use <database-name>;

# to see current database
select database();

#### TABLE
## DAta Type
# Numeric type
INT, SMALLINT, TINYINT' MEDIUMINT, BIGINT, DECIMAL, NUMERIC, FLOAT, DOUBLE, BIT

# String
CHAR, VARCHAR, BINARY, VARBINARY, BLOB, TINYBLOB, MEDIUMBLOB, LONGBLOB, TEXT, TINYTEXT, MEDIUMTEXT, LONGTEXT, ENUM

#DAte types
DATE, DATETIME, TIMESTAMP, TIME, YEAR

# CREATE TABLE
CREATE TABLE USER_TABLE
  (
    username varchar(20),
    matchingname varchar(20),
    hit int
  );
  
# to see table
  show tables;
  
# to see header/column in table
  show columns from <table-name>;
  desc <table-name>;
  
# delete table
  drop table <table-name>;
  
  
# TO not null value
CREATE TABLE <Table-Name> ( cloumn1 VARCHAR(20) NOT NULL, column2 INT NOT NULL );

# Default value
CREATE TABLE <Table-name> ( name VARCHAR(20) DEFAULT 'unnamed', age INT DEFAULT 99 );

# Key
CREATE TABLE <Table-Name>(cat_id INT NOT NULL, name VARCHAR(20) NOT NULL, age INT NOT NULL DEFAULT 99, PRIMARY KEY (cat_id));

# PRIMARY KEY AUTO INCREMENT
CREATE TABLE <Table-Name>(cat_id INT NOT NULL AUTO_INCREMENT, name VARCHAR(20) NOT NULL, age INT NOT NULL DEFAULT 99, PRIMARY KEY (cat_id));



  
  
  
